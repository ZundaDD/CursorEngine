<Window x:Class="CursorEngine.View.RenamePanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CursorEngine.View"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="重命名"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Height="120"
        MinHeight="120"
        Width="200"
        MinWidth="200"
        FocusManager.FocusedElement="{Binding ElementName=InputText}"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="请输入新名称:"
                       FontSize="12"
                       Foreground="Wheat"
                       VerticalAlignment="Center"
                       Grid.Column="0"/>

            <TextBox Grid.Column="1"
                     x:Name="InputText"
                     Text="{Binding EditText, UpdateSourceTrigger=PropertyChanged}" 
                     Margin="5">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding ConfirmCommand}"/>
                    <KeyBinding Key="Esc" Command="{Binding CancelCommand}"/>
                </TextBox.InputBindings>
            </TextBox>

        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            
            <Button Grid.Column="0"
                    Content="确认"
                    Height="20"
                    FontSize="10"
                    Margin="10,5,10,0"
                    Command="{Binding ConfirmCommand}" IsDefault="True" />
            
            <Button Grid.Column="1"
                    Content="取消"
                    Height="20"
                    FontSize="10"
                    Style="{StaticResource MaterialDesignFlatSecondaryLightBgButton}"
                    Command="{Binding CancelCommand}" IsCancel="True" 
                    Margin="10,5,10,0"/>

        </Grid>
    </Grid>
</Window>
